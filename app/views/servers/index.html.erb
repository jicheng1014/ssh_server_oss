<%= turbo_stream_from "servers" %>

<div data-controller="ip-toggle">
  <!-- Filter Bar -->
  <div class="mb-4 bg-white rounded-lg shadow p-4">
    <%= form_tag servers_path, method: :get, class: "flex flex-wrap items-center gap-4" do %>
      <div class="flex items-center gap-2">
        <label class="text-sm text-gray-600">IP:</label>
        <%= text_field_tag :ip, params[:ip],
            class: "border border-gray-300 rounded px-3 py-1.5 text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 w-32",
            placeholder: "搜索 IP..."
        %>
      </div>

      <div class="flex items-center gap-2">
        <label class="text-sm text-gray-600">国籍:</label>
        <%= select_tag :country,
            options_for_select(
              [["全部", ""]] + @countries.map { |c| [country_flag(c) + " " + c, c] },
              params[:country]
            ),
            class: "border border-gray-300 rounded px-3 py-1.5 text-sm focus:outline-none focus:ring-2 focus:ring-blue-500",
            onchange: "this.form.submit()"
        %>
      </div>

      <div class="flex items-center gap-2">
        <label class="text-sm text-gray-600">服务商:</label>
        <%= select_tag :provider,
            options_for_select(
              [["全部", ""]] + @providers.map { |p| [p, p] },
              params[:provider]
            ),
            class: "border border-gray-300 rounded px-3 py-1.5 text-sm focus:outline-none focus:ring-2 focus:ring-blue-500",
            onchange: "this.form.submit()"
        %>
      </div>

      <div class="flex items-center gap-2">
        <label class="text-sm text-gray-600">系统:</label>
        <%= select_tag :os,
            options_for_select(
              [["全部", ""]] + @os_names.map { |o| [o, o] },
              params[:os]
            ),
            class: "border border-gray-300 rounded px-3 py-1.5 text-sm focus:outline-none focus:ring-2 focus:ring-blue-500",
            onchange: "this.form.submit()"
        %>
      </div>

      <%= submit_tag "搜索", class: "bg-blue-500 hover:bg-blue-700 text-white text-sm py-1.5 px-4 rounded cursor-pointer" %>

      <% if params[:country].present? || params[:provider].present? || params[:os].present? || params[:ip].present? %>
        <%= link_to "清除筛选", servers_path, class: "text-sm text-blue-500 hover:text-blue-700" %>
      <% end %>
    <% end %>
  </div>

  <!-- Action Bar -->
  <div class="mb-4 flex justify-between items-center">
    <div class="flex items-center gap-4">
      <div data-controller="refresh" data-refresh-url-value="<%= refresh_all_servers_path %>">
        <button
          type="button"
          data-action="click->refresh#refresh"
          data-refresh-target="button"
          class="bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded inline-flex items-center"
        >
          <svg data-refresh-target="spinner" class="hidden animate-spin -ml-1 mr-2 h-4 w-4 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
            <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
            <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
          </svg>
          刷新所有服务器
        </button>
      </div>
      <span class="text-sm text-gray-500">共 <%= @servers.size %> 台服务器</span>
    </div>
    <button
      type="button"
      data-action="click->ip-toggle#toggle"
      data-ip-toggle-target="button"
      class="text-gray-500 hover:text-gray-700 text-sm px-3 py-1 border border-gray-300 rounded hover:bg-gray-50"
    >
      隐藏IP
    </button>
  </div>

  <% if @servers.any? %>
    <div
      class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6"
      data-controller="sortable"
      data-sortable-url-value="<%= sort_servers_path %>"
    >
      <% @servers.each do |server| %>
        <%= render server %>
      <% end %>
    </div>
  <% elsif params[:country].present? || params[:provider].present? || params[:os].present? || params[:ip].present? %>
    <div class="text-center py-12 bg-white rounded-lg shadow">
      <p class="text-gray-500 mb-4">没有符合筛选条件的服务器</p>
      <%= link_to "清除筛选", servers_path, class: "text-blue-500 hover:text-blue-700" %>
    </div>
  <% else %>
    <div class="text-center py-12 bg-white rounded-lg shadow">
      <p class="text-gray-500 mb-4">还没有添加服务器</p>
      <%= link_to "添加第一台服务器", new_server_path, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
    </div>
  <% end %>
</div>
